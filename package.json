{
    "name": "itemper-backend",
    "version": "0.1.0",
    "description": "iTemper.io server implementation",
    "repository": {
        "type": "git",
        "url": "https://github.com/vadintor/iTemper-Backend.git"
    },
    "author": "Torbj√∂rn Vading",
    "license": "MIT",
    "scripts": {
        "start": "node -r dotenv/config dist/src/server.js",
        "build": "npm run --if-present rm -r dist && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "ts-node -r dotenv/config  src/server.ts",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --detectOpenHandles --coverage --setupFiles dotenv/config",
        "jest": "jest --forceExit --coverage",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "lint": "eslint . --ext .ts",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "release": "ts-node release.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "bcrypt": "^4.0.1",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "cors": "^2.8.5",
        "dotenv": "^4.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-validator": "^6.5.0",
        "express-ws": "^4.0.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "mkdirp": "^1.0.4",
        "mongoose": "^6.2.2",
        "multer": "^1.4.2",
        "request": "^2.88.2",
        "tslib": "^2.3.1",
        "uuid": "^3.4.0",
        "winston": "^3.2.1",
        "ws": "^7.3.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.31",
        "@types/body-parser": "^1.19.0",
        "@types/bonjour": "^3.5.6",
        "@types/compression": "^0.0.35",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^4.0.3",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.17.0",
        "@types/express-ws": "^3.0.0",
        "@types/jest": "^24.9.1",
        "@types/jquery": "^3.5.11",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/lodash": "^4.14.152",
        "@types/lusca": "^1.6.1",
        "@types/mkdirp": "^1.0.2",
        "@types/mongodb": "^3.5.18",
        "@types/multer": "^1.4.3",
        "@types/node": "^17.0.8",
        "@types/request": "^2.48.5",
        "@types/shelljs": "^0.7.9",
        "@types/supertest": "^2.0.9",
        "@types/uuid": "^3.4.9",
        "@types/ws": "^6.0.4",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "chai": "^4.2.0",
        "concurrently": "^3.6.1",
        "eslint": "^8.6.0",
        "eslint-plugin-vue": "^8.2.0",
        "jest": "^24.9.0",
        "mongodb-memory-server": "^6.6.0",
        "nodemon": "^1.19.4",
        "shelljs": "^0.8.4",
        "snyk": "^1.323.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.3.0",
        "ts-node": "^10.4.0",
        "tsutil": "^6.1.1",
        "typescript": "^4.5.4"
    }
}
