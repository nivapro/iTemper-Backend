{
    "name": "iTemperNode",
    "version": "0.0.31",
    "description": "iTemper.io server implementation",
    "repository": {
        "type": "git",
        "url": "https://github.com/vadintor/iTemperNode"
    },
    "author": "Torbj√∂rn Vading",
    "license": "Apache 2.0",
    "scripts": {
        "start": "node -r dotenv/config dist/server.js",
        "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
        "serve": "ts-node src/server.ts",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "snyk test && jest --forceExit --coverage",
        "orig-test": "jest --forceExit --coverage --verbose",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "release": "ts-node release.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.6",
        "@types/express-ws": "^3.0.0",
        "@types/multer": "^1.3.10",
        "@types/uuid": "^3.4.5",
        "@types/ws": "^6.0.3",
        "bcrypt": "^3.0.6",
        "bluebird": "^3.7.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^2.0.3",
        "cors": "^2.8.5",
        "dotenv": "^4.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-validator": "^5.3.1",
        "express-ws": "^4.0.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "mongo-tenant": "^1.7.0",
        "mongoose": "^5.6.11",
        "multer": "^1.4.2",
        "request": "^2.88.0",
        "uuid": "^3.3.3",
        "winston": "^3.2.1",
        "ws": "^7.1.2"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/bonjour": "^3.5.5",
        "@types/compression": "^0.0.35",
        "@types/dotenv": "^4.0.3",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/jest": "^22.2.3",
        "@types/jquery": "^3.3.31",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/lodash": "^4.14.142",
        "@types/lusca": "^1.6.1",
        "@types/mongodb": "^3.1.28",
        "@types/mongoose": "^4.7.47",
        "@types/node": "^9.6.52",
        "@types/request": "^2.48.3",
        "@types/shelljs": "^0.7.9",
        "chai": "^4.2.0",
        "concurrently": "^3.6.1",
        "jest": "^22.4.4",
        "nodemon": "^1.19.3",
        "shelljs": "^0.8.3",
        "snyk": "^1.232.0",
        "ts-jest": "^24.1.0",
        "ts-node": "^5.0.1",
        "tslint": "^5.18.0"
    }
}