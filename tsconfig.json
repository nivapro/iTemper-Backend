{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2021",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "lib": ["es2021", "DOM"],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*",
                "src/types/*",

            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
